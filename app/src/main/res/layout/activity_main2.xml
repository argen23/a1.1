<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/img_clss"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/clss"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvclss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:paddingStart="15dp"
        android:text="The COLOSSEUM"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_clss"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:text="one of the most recognizable sites in the world"
        app:layout_constraintBottom_toBottomOf="@id/tvclss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvclss" />


    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/round"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_clss"
        app:srcCompat="@drawable/vector" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_clss"
        app:srcCompat="@drawable/group"

        />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/round"
        android:src="@drawable/google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_clss"

        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        android:text="312"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/go"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:layout_margin="72dp"
        android:background="#FF6363"
        android:textColor="@color/white"
        android:text="Перейти"
        />

</androidx.constraintlayout.widget.ConstraintLayout>